extends layout

block content
  // /.container-fluid
  .container.text-center
    // HEADER
    .page-header
      h1 Post-Scenario Feedback
      p Now's your chance to feed back on this particular scenario experience.
    // CONTENT
    form#scenario_2_form.text-left.col-sm-12.greybackground.paddingbottom(name='scenario_2_form', method='post', action='/feedback_post')
      .row.invisible
        input#scenario_number(name='scenario', value='2')
      .row.col-sm-12
        .form-group
          h4
            label How did it go?
          .radio
            label
              input#optionsRadios1(type='radio', name='success', value='It all worked well')
              p It all worked well
          .radio
            label
              input#optionsRadios2(type='radio', name='success', value='Some of it worked')
              p Some of it worked
          .radio
            label
              input#optionsRadios3(type='radio', name='success', value='None of it worked')
              p None of it worked
        .form-group
          h4
            label(for='whathappenedtextarea') Please briefly describe your experience.
          textarea#whathappenedtextarea.form-control(rows='2' name='explain')
        .form-group
          h4
            label Can you see the potential for facial analysis in the future of gaming?
          .radio
            label
              input#optionsRadios1(type='radio', name='potential', value='Yes, I can see the potential')
              p Yes, I can see the potential
          .radio
            label
              input#optionsRadios2(type='radio', name='potential', value='No, I cannot see the potential')
              p No, I cannot see the potential
        .form-group
          h4
            label(for='whynottextarea') Do you have any other comments?
          textarea#whynottextarea.form-control(rows='2' name='comments')
      .row
        .form-group.text-center
          a.btn.btn-default.btn-lg(href='/data', role='button') Skip
          button.btn.btn-primary.btn-lg(type='submit' href='/data') Submit