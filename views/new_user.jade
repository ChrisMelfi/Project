extends layout

block content
  // /.container-fluid
  .container.text-center
    // HEADER
    .page-header
      h1 First off, please create a username.
      p
        | Don't worry, we don't need your real name, and you won't need to remember it... it's just so we can keep track of your results.
    form.input-group.col-md-4.col-md-offset-4
      .row
        input.form-control(type='text', placeholder='Username')
        .alert.alert-danger.hidden(role='alert') Sorry, this username has already been taken. Please enter a different username.
      .row
        button.btn.btn-primary.btn-lg(href='/', type='submit') Continue
    // CONTENT