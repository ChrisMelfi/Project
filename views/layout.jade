    // NAVIGATION
    nav.navbar.navbar-default.navbarcustom
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.navbarcustomcurrent(href='/') The Facial Analysis Project
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/home', class=(project===true) ? 'navbarcustomcurrent' : '')
                | Project
                span.sr-only (current)
            li
              a(href='/data', class=(title==='Data') ? 'navbarcustomcurrent' : '') Data
            li
              a(href='/about', class=(title==='About') ? 'navbarcustomcurrent' : '') About
            li
              a(href='/terms', class=(title==='Terms & Conditions') ? 'navbarcustomcurrent' : '') Terms & Conditions
